<%- include("header") %>

    


<%  Animes.forEach((categ, index1)=>{ 
    
        var  count = 0;
        const type = categ[0].type;
        %>
    <div class="section">
        <h2><%= type %></h2>
        <div class="grids">
            <% categ.forEach((anime, index)=>{

                count++;
                if(index < 6 ){
                var { title_english: title1, title: title2, images: {jpg: {image_url: img}}} = anime;
                var title;

                //now let's check if the title is empty
                if(title1 == null){ 
                    title = title2;
                }else{
                    title = title1;
                }

                //let's check if the title is too long
                if(title.length > 18){
                    title = title.slice(0,15);
                    title += "...";
                }

            %>
            
            <div class="card">
                <img src="<%= img %>" alt="<%= title %>" />
                <div class="title" >
                    <span> <%= title %> </span>
                </div>
            </div>
            
            <% }}); %>
        </div>
        <% if(count > 6){  %>
        <div>
            <a href="/<%= type %>?q=<%= search %>">...more</a>
        </div>
        <% } %>
    </div>
<% }); %>

  
<%- include("footer") %>